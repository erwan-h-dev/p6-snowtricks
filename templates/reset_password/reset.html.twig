{% extends 'base.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
<main class="form-signin pt-5 mt-5">
    <div class="card">
        <div class="card-header d-flex justify-content-center">
            <h1 class="h3 fw-normal">Changer de mot de passe</h1>
        </div>
        <div class="card-body">

            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                
                <button type="submit" class="w-100 btn btn-primary">Changer le mot de passe</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
</main>
{% endblock %}