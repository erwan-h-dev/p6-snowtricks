{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-5 pt-5" id="content-page">

	<div class="d-flex justify-content-between mb-3">
		<h3 class="h1 text-light">Listes des Catégories</h3>
		<div>
			<a href="{{ path('app_categorie_new') }}" class="btn btn-success"><i class="fa-solid fa-plus me-2"></i>Créer une Catégorie</a>
		</div>
	</div>
		
	<div class="list-group">
		{% for categorie in categories %}
            <div class="list-group-item d-flex justify-content-between">
				<h5>{{ categorie.libelle }}</h5>
                <div class="text-end">
					<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning text-light edit"><i class="fa-solid fa-pen"></i></a>
					<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-danger remove"><i class="fa-regular fa-trash-can"></i></a>
                </div>
            </div>
        {% else %}
            <div class="w-100">
				<p class="text-warning">Aucune Catégorie n'a été crée</p>
			</div>
        {% endfor %}
	</div>
</div>

{{ encore_entry_script_tags('index') }}

{% endblock %}